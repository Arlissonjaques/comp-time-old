
<div class="container">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-5 mx-auto">
      <div id="first">
        <div class="myform form">

          <div class="logo mb-3">
            <div class="col-md-12 text-center text-white">
              <h1>Login</h1>
            </div>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, :class => "form-label mt-4 text-white"%><br />
              <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, :class => "form-label mt-4 text-white"%><br />
              <%= f.password_field :password, :class => "form-control", :id => "password" %>
            </div><br>

            <div class="actions text-center">
              <%= f.submit "Login", :class => "btn btn-secondary" %>
            </div><br>

            <div class="col-md-12 mb-3">
              <p>
                <%= link_to '#', class: " text-decoration-none" do %>
                  <%= image_tag('google-white.svg', style: 'height:1vw;width:1vw;') %>&nbsp;&nbsp;
                  Entrar com o Google
                <% end %>
              </p>
            </div>

            <div class="col-md-12">
              <div class="login-or text-white text-center">
                <hr class="hr-or"><span class="span-or">or</span>
              </div>
            </div><br>

            <div class="form-group">
              <p class="text-center text-white">
                NÃ£o tem uma conta? Crie uma <%= link_to('aqui.', new_user_registration_path) %>
              </p>
            </div>
          <% end %>

        </div> 
      </div>
    </div>
  </div>
</div>
